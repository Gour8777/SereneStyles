<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>loreal</title>
    <link rel="stylesheet" href="/css/loreal.css">
</head>

<body>
    <div id="head">
        <h1 id="salonname">L'ORÉAL</h1>
        <h3 id="salonsubname">PARiS</h3>
        <div id="navbar">
            <div class="navv"><a href="<%= homeUrl %>">Home</a></div>
            <div class="navv"><a href="">Gallery</a></div>
            <div class="navv"><a href="">About Us</a></div>
        </div>
    </div>
    <main>
        <button id="booking">Book Appointment</button>
        <div class="container" style="display: none;">
            <form id="contactForm" action="/loreal" method="post">
                <input type="hidden" name="salonname" value="L'ORÉAL">
                <input type="hidden" name="email" value="<%= bmail %>">
                
                <input type="text" id="name" name="name" required placeholder="Name">

                
                <input type="radio" id="male" name="sex" value="male" required placeholder="Sex">
                <label for="male">Male</label>
                <input type="radio" id="female" name="sex" value="female" required>
                <label for="female">Female</label>
                <input type="radio" id="other" name="sex" value="other" required>
                <label for="other">Other</label>

              
                <input type="tel" id="contact" name="contact" pattern="[0-9]{10}" required placeholder="Phone no.">

                
                <input type="datetime-local" id="datetime" name="datetime" required placeholder="Date and Time">

               
                <textarea id="description" name="purpose" placeholder="Purpose Of Visit"></textarea>

               
                <select id="selectOption" name="reason" required aria-placeholder="Select">
                    <option value="default">Select an option</option>
                    <option value="Skin Care">Skin Care</option>
                    <option value="Hair Care">Hair Care</option>
                    <option value="Dandruff Treatment">Dandruff Treatment</option>
                    <option value="Hair Loss Treatment">Hair Loss Treatment</option>
                </select>

                <input type="submit" value="Book" class="btn-submit">
            </form>
        </div>
    </main>

    <script>
        const currentDateTime = new Date();
        currentDateTime.setHours(currentDateTime.getHours() + 2); // Add 2 hours to the current time
        const minDateTime = currentDateTime.toISOString().slice(0, 16);
        document.getElementById('datetime').min = minDateTime;

        document.getElementById('contactForm').addEventListener('submit', function (event) {
            const inputDateTime = document.getElementById('datetime').value;
            const inputDate = new Date(inputDateTime);
            const currentDateTime = new Date();

            if (inputDate <= currentDateTime) {
                alert('Please select a date and time at least 2 hours ahead of the current time.');
                event.preventDefault(); // Prevent form submission only if the date and time are invalid
            }
        });

        document.getElementById('booking').addEventListener('click', function () {
            const container = document.querySelector('.container');
            const book=document.querySelector('#booking');
            if (container.style.display === 'none' || container.style.display === '') {
                container.style.display = 'block';
                book.innerHTML="Book Later";

            } else {
                container.style.display = 'none';
                book.innerHTML="Book Appointment";
            }
        });
    
    </script>
</body>

</html>
